<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="./assets/style/bootstrap/bootstrap.css">
    <title>Title</title>
    <link rel="icon" type="image/x-icon" href="./assets/img/favicon.ico">
</head>
<body>
{% include "header.html.twig" %}
{#{{ mangas }}#}

{% if mangas is null%}
<div>Aucun produit dans le panier</div>
{% else %}
<form method="post" action="/modifycart">

{% for manga in mangas %}
    <div  class="text-center">
<div class="mt-3">

    <h4>{{ manga[0] }}</h4>

</div>

    {% for key,numero in manga[1]  %}

    <div id="{{ manga[2][key] }}" class="mt-2">
        {{ lang.PANIER.CHAPITRE }} {{ manga[1][key] }}
        <div class="mt-1">
            {{ lang.PANIER.QUANTITE }} :
            <input type ='button' onclick="decrement(this)" id="decrement{{ manga[2][key] }}" value="-1" class="btn btn-outline-primary">
            <input id="{{ manga[3][key][0] }}" value="{{ manga[3][key][1] }}" name="{{ manga[2][key] }}" readonly size="1" class="text-center inputlg">
            <input type="button" onclick="increment(this)" class='increment btn btn-outline-primary' id="increment{{ manga[2][key] }}" value="+1">
        </div>
    </div>

    {% endfor %}

</div>

{% endfor %}
    <button type="submit" value="modify" name="modify">Enregistrer les modifications</button>
    <button type="submit" value="validate" name="validate">Valider le panier </button>

</form>
{% endif %}

{% include "footer.html.twig" %}

</body>
<script src="./javascript/panier.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>