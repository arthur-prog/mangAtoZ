<!DOCTYPE html>
<html lang="fr">
<head>

    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag/dist/css/multi-select-tag.css">
    <script src="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag/dist/js/multi-select-tag.js"></script>
    <script src="./javascript/chapterspage.js"></script>

    <title>Title</title>
</head>

{% include "header.html.twig" %}


<form method="post" action="/addproduct" id="chapitre">
    <select id="countries" multiple>
    {% for key, chapter in chapters %}
        {% set numero = key+1 %}
        {% set numerolength = numero | json_encode(constant('JSON_PRETTY_PRINT'))|length%}

        {% set values = [] %}
                {% for i in 0..numerolength-1 %}
                    {% set values = values|merge([numero|slice(i)]) %}
                {% endfor %}

        {% if not chapter.stock == 0 %}

            <option value={{ key+1 }}>{{ key+1 }} {{ lang.CHAPITRE.PRIX }} : {{ chapter.chapterPrice }} â‚¬</option>

        {% else %}

            <option value={{ key+1 }}>{{ key+1 }}</option>
            <script>
                AddPasDispo({{ key+1 }})
            </script>

        {% endif %}
    {% endfor %}

    </select>

    <button type="submit">{{ lang.CHAPITRE.PANIER }}</button>
</form>
{% include "footer.html.twig" %}
<script>
    new MultiSelectTag('countries', {
        rounded: true,    // default true
        shadow: true,     // default false
    })  // id
    Initialize()

</script>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>